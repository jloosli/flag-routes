{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "paths": {
      "@flags/interfaces/*": [
        "app/interfaces/*"
      ],
      "@flags/modules/*": [
        "app/modules/*"
      ],
      "@flags/services/*": [
        "app/services/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "esnext"
  }
}
